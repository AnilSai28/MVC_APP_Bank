
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>newemployee</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div align="center">
        @using (Html.BeginForm("newemployee", "home", FormMethod.Post,
            new { @class = "container", @style = "width:40%;text-align:left;",
                @enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label for="empname" class="form-control-static">Employee name</label>
                @Html.TextBox("empname", "", new { @class="form-control"})
                <label for="empname" class="text-danger">*</label>
            </div>

            <div class="form-group">
                <label for="empcity" class="form-control-static">Employee city</label>
                @Html.DropDownList("empcity",ViewBag.cities as List<SelectListItem>,
               new { @class = "form-control" })
                <label for="empcity" class="text-danger">*</label>
             </div>

            <div class="form-group">
                <label for="empgender" class="form-control-static">Employee gender</label>
                <label>male:@Html.RadioButton("empgender","male",new { @id = "rdb_male" })</label>
                <label>female:@Html.RadioButton("empgender","female",new { @id = "rdb_female" })</label>
                <label for="empgender" class="text-danger">*</label>
            </div>

            <div class="form-group">

                <label for="empimage" class="form-control-static">Employee image </label>
                <input type="file" name="empimage" id="empimage" class="form-control"/>
                <label for="empimage" class="text-danger">*</label>
            </div>

            <div class="form-group">
                <input type="submit" value="New employee" class="btn_success" />
                <br/>
                @ViewBag.msg
                <br/>
                <img height="100px" width="200px" src=@ViewBag.address />
            </div>
        }
            </div>
</body>
</html>
